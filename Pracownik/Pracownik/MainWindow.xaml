<Window x:Class="EmployeeApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dodaj pracownika" Height="300" Width="550" Background="LightSteelBlue">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <GroupBox Header="Dane pracownika" FontWeight="Bold" Margin="0,0,10,0">
            <StackPanel Margin="10">
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <Label Width="80" VerticalAlignment="Center">Imię</Label>
                    <TextBox x:Name="txtImie" Width="150"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <Label Width="80" VerticalAlignment="Center">Nazwisko</Label>
                    <TextBox x:Name="txtNazwisko" Width="150"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <Label Width="80" VerticalAlignment="Center">Stanowisko</Label>
                    <ComboBox x:Name="cmbStanowisko" Width="150">
                        <ComboBoxItem>Tester</ComboBoxItem>
                        <ComboBoxItem>Programista</ComboBoxItem>
                        <ComboBoxItem>Menadżer</ComboBoxItem>
                    </ComboBox>
                </StackPanel>
            </StackPanel>
        </GroupBox>

        <Grid Grid.Column="1"/>
    </Grid>
</Window>
