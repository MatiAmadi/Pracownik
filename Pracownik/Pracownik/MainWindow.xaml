<Window x:Class="Pracownik.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dodaj pracownika" Height="300" Width="550" Background="LightSteelBlue">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <GroupBox Header="Dane pracownika" FontWeight="Bold" Margin="0,0,10,0">
            <StackPanel Margin="10">
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <Label Width="80" VerticalAlignment="Center">Imię</Label>
                    <TextBox x:Name="txtImie" Width="150"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <Label Width="80" VerticalAlignment="Center">Nazwisko</Label>
                    <TextBox x:Name="txtNazwisko" Width="150"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <Label Width="80" VerticalAlignment="Center">Stanowisko</Label>
                    <ComboBox x:Name="cmbStanowisko" Width="150">
                        <ComboBoxItem>Tester</ComboBoxItem>
                        <ComboBoxItem>Programista</ComboBoxItem>
                        <ComboBoxItem>Menadżer</ComboBoxItem>
                    </ComboBox>
                </StackPanel>
            </StackPanel>
        </GroupBox>


        <GroupBox Header="Generowanie hasła" FontWeight="Bold" Grid.Column="1" Margin="10,0,0,0">
            <StackPanel Margin="10">
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <Label Width="100" VerticalAlignment="Center">Ile znaków?</Label>
                    <TextBox x:Name="txtPasswordLength" Width="40" Text="5"/>
                </StackPanel>
                <CheckBox x:Name="chkLetters" IsChecked="True" Margin="0,5">Małe i wielkie litery</CheckBox>
                <CheckBox x:Name="chkDigits" Margin="0,5">Cyfry</CheckBox>
                <CheckBox x:Name="chkSpecial" Margin="0,5">Znaki specjalne</CheckBox>
                <Button Content="Generuj hasło" Width="100" Margin="0,10,0,0" Click="BtnGenerujHaslo_Click"/>
            </StackPanel>
        </GroupBox>


        <Button Content="Zatwierdź" Width="80" Height="25" VerticalAlignment="Bottom" HorizontalAlignment="Center" Grid.ColumnSpan="2" Margin="0,0,0,10" Click="BtnZatwierdz_Click"/>
    </Grid>
</Window>
